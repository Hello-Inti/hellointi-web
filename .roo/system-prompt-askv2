      required: ["server_name", "tool_name", "arguments"]
    usage: "<use_mcp_tool><server_name>name</server_name><tool_name>tool</tool_name><arguments>{...}</arguments></use_mcp_tool>"

  access_mcp_resource:
    <<: *tool_base
